package() {
	cd "Hydrogen-$pkgver-rc2"
	make DESTDIR="$srcdir/" install
	install -D -m 644 "$srcdir/Hydrogen-$pkgver-rc2"/cursors/COPYING-ICONS "${pkgdir}"/usr/share/licenses/hydrogen/cursors/COPYING-ICONS
}
